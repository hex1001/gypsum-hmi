<Window x:Class="microCalcium.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:microCalcium"
        mc:Ignorable="d"      
        
        Title="MainWindow" Height="900" Width="1440" WindowState="Maximized">
   
    <Grid Background="#5c585c">
        <Grid.RowDefinitions>
            <RowDefinition Height="40" ></RowDefinition>
            <RowDefinition Height="400*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <Button Height="25" Width="100" Content="Тегирмон №1" Margin=" 15 0 0 5 " Click="Button_Click_1"/>
            <Button Height="25" Width="100" Content="Тегирмон №2" Margin=" 5 0 0 5" Click="Button_Click_2"/>
            <Button Height="25" Width="100" Content="Тегирмон №3" Margin=" 5 0 0 5"/>
        </StackPanel>
        <Frame x:Name="Frame" Grid.Row="1" NavigationUIVisibility="Hidden">
            
        </Frame>

    </Grid>
</Window>
